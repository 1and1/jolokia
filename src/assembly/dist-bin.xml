<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>jolokia-${project.version}</baseDirectory>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-war</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia.war</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-mule</include>
      </includes>
      <binaries>
        <attachmentClassifier>agent</attachmentClassifier>
        <outputFileNameMapping>jolokia-mule.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-osgi</include>
      </includes>
      <binaries>        
        <outputFileNameMapping>jolokia-osgi.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-osgi-bundle</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-osgi-bundle.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-jvm-jdk6</include>
      </includes>
      <binaries>
        <attachmentClassifier>agent</attachmentClassifier>
        <outputFileNameMapping>jolokia-jvm6.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-client-java</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-client.jar</outputFileNameMapping>
        <outputDirectory>client</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>